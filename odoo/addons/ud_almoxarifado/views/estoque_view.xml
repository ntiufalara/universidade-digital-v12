<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record model="ir.actions.act_window" id="ud_almoxarifado_estoque_action">
            <field name="name">Estoque</field>
            <field name="res_model">ud.almoxarifado.estoque</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_agrupar_almoxarifado': 1}</field>
        </record>

        <record model="ir.ui.view" id="ud_almoxarifado_estoque_tree">
            <field name="name">Estoques</field>
            <field name="model">ud.almoxarifado.estoque</field>
            <field name="arch" type="xml">
                <tree string="Estoques">
                    <field name="name"/>
                    <field name="quantidade"/>
                    <field name="estoque_min"/>
                    <field name="almoxarifado_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_almoxarifado_estoque_search">
            <field name="name">Busca</field>
            <field name="model">ud.almoxarifado.estoque</field>
            <field name="arch" type="xml">
                <search string="Buscar">
                    <field name="name" string="Nome"/>
                    <field name="quantidade" string="Quantidade"/>
                    <field name="estoque_min" string="Estoque mínimo"/>
                    <field name="almoxarifado_id"/>
                    <group expand="0" string="Agrupar por:">
                        <filter string="Almoxarifado" icon="terp-personal" domain="[]"
                                context="{'group_by':'almoxarifado_id'}" name="agrupar_almoxarifado"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_almoxarifado_estoque_form">
            <field name="name">Estoque</field>
            <field name="model">ud.almoxarifado.estoque</field>
            <field name="arch" type="xml">
                <form string="Estoque">
                    <div class="alert alert-warning" attrs="{'invisible': [('produto_id', '!=', False)]}">
                        <p>Ao cadastrar um novo produto, o estoque será gerado automaticamente para os almoxarifados
                            listados no cadastro. Caso queira adicionar um novo registro, adicione um almoxarifado ao
                            produto deejado em "Produtos"
                        </p>
                    </div>
                    <div class="form-horizontal sheet col-sm-12 col-xs-12">
                        <fieldset>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="produto_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="produto_id" readonly="1"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="categoria_id"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="categoria_id"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="quantidade"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="quantidade"/>
                                </div>
                            </div>
                            <div class="col-md-6 col-lg-6 form-group">
                                <label class="col-md-4 col-sm-4 control-label" for="estoque_min"></label>
                                <div class="col-md-7 col-sm-7">
                                    <field name="estoque_min"/>
                                </div>
                            </div>
                        </fieldset>
                        <fieldset>
                            <div class="col-md-12 col-lg-12 form-group">
                                <legend>Entradas</legend>
                                <div class="col-md-12 col-sm-12">
                                    <field name="entrada_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="data_entrada"/>
                                            <field name="solicitacao_id"/>
                                            <field name="observacao"/>
                                            <field name="fornecedor_id"/>
                                            <field name="quantidade"/>
                                            <field name="tipo"/>
                                        </tree>
                                        <form string="Entrada">
                                            <div class="form-horizontal sheet col-sm-12 col-xs-12">
                                                <div class="col-md-6 col-lg-6 form-group">
                                                    <label class="col-md-4 col-sm-4 control-label" for="name"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="name" readonly="1"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 form-group">
                                                    <label class="col-md-4 col-sm-4 control-label"
                                                           for="data_entrada"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="data_entrada"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 form-group">
                                                    <label class="col-md-4 col-sm-4 control-label"
                                                           for="quantidade"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="quantidade"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 form-group">
                                                    <label class="col-md-4 col-sm-4 control-label" for="tipo"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="tipo"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 form-group"
                                                     attrs="{'invisible': [('tipo', '!=', 'fornecedor')]}">
                                                    <label class="col-md-4 col-sm-4 control-label"
                                                           for="fornecedor_id"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="fornecedor_id"
                                                               attrs="{'required': [('tipo', '=', 'fornecedor')]}"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 form-group"
                                                     attrs="{'invisible': [('solicitacao_id', '=', False)]}">
                                                    <label class="col-md-4 col-sm-4 control-label"
                                                           for="solicitacao_id"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="solicitacao_id"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 col-lg-12 form-group">
                                                    <legend>Observações</legend>
                                                    <div class="col-md-12 col-sm-12">
                                                        <field name="observacao"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </field>
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-12 form-group">
                                <legend>Saidas</legend>
                                <div class="col-md-12 col-sm-12">
                                    <field name="saida_ids">
                                        <tree>
                                            <field name="name"/>
                                            <field name="data_saida"/>
                                            <field name="solicitacao_id"/>
                                            <field name="observacao"/>
                                            <field name="quantidade"/>
                                        </tree>
                                        <form string="Saída">
                                            <div class="form-horizontal sheet col-sm-12 col-xs-12">
                                                <div class="col-md-6 col-lg-6 form-group">
                                                    <label class="col-md-4 col-sm-4 control-label" for="name"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="name" readonly="1"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 form-group">
                                                    <label class="col-md-4 col-sm-4 control-label"
                                                           for="data_saida"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="data_saida"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 form-group">
                                                    <label class="col-md-4 col-sm-4 control-label"
                                                           for="quantidade"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="quantidade"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-lg-6 form-group"
                                                     attrs="{'invisible': [('solicitacao_id', '=', False)]}">
                                                    <label class="col-md-4 col-sm-4 control-label"
                                                           for="solicitacao_id"></label>
                                                    <div class="col-md-7 col-sm-7">
                                                        <field name="solicitacao_id"/>
                                                    </div>
                                                </div>
                                                <div class="col-md-12 col-lg-12 form-group">
                                                    <legend>Observações</legend>
                                                    <div class="col-md-12 col-sm-12">
                                                        <field name="observacao"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </field>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>