<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record model="ir.actions.act_window" id="ud_almoxarifado_fabricante_action">
            <field name="name">Fabricante</field>
            <field name="res_model">ud.almoxarifado.fabricante</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Clque para adicionar um novo Fabricante
                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_almoxarifado_fabricante_tree">
            <field name="name">Fabricantes</field>
            <field name="model">ud.almoxarifado.fabricante</field>
            <field name="arch" type="xml">
                <tree string="Fabricantes">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_almoxarifado_fabricante_search">
            <field name="name">Busca</field>
            <field name="model">ud.almoxarifado.fabricante</field>
            <field name="arch" type="xml">
                <search string="Buscar">
                    <field name="name" filter_domain="" string="Nome"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_almoxarifado_fabricante_form">
            <field name="name">Fabricante</field>
            <field name="model">ud.almoxarifado.fabricante</field>
            <field name="arch" type="xml">
                <form string="Fabricante">
                    <div class="form-horizontal sheet col-sm-12 col-xs-12">
                        <div class="col-md-6 col-lg-6 form-group">
                            <label class="col-md-4 col-sm-4 control-label" for="name"></label>
                            <div class="col-md-7 col-sm-7">
                                <field name="name"/>
                            </div>
                        </div>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>