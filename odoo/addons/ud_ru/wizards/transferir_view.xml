<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record model="ir.actions.act_window" id="ud_transferir_wizard_action">
            <field name="name">Transferir</field>
            <field name="res_model">ud.ru.transferir</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record model="ir.ui.view" id="transferir_form">
            <field name="name">Transferir</field>
            <field name="model">ud.ru.transferir</field>
            <field name="arch" type="xml">
                <form string="Atribuir dados de execução">
                    <sheet>
                        <group>
                            <group>
                                <field name="valor"/>
                                <field name="data_transferencia"/>
                                <field name="pessoa_id"/>
                                <field name="destinatario_id"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Salvar" name="transferir" type="object" class="oe_highlight"/>
                        ou
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


