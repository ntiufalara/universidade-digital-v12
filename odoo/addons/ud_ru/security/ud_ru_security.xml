<?xml version="1.0" encoding="UTF-8" ?>

<openerp>
	<data noupdate="0">
		<record model="ir.module.category" id="module_category_ud_restaurante">
			<field name="name">Restaurante Universitário (UD)</field>
		</record>

		<record id="group_ud_ru_usuario" model="res.groups">
			<field name="name">Usuário</field>
			<field name="category_id" ref="module_category_ud_restaurante"/>
        	<field name="comment">Grupo de controle de políticas para usuários comuns</field>
		</record>

		<record id="group_ud_ru_funcionario" model="res.groups">
			<field name="name">Funcionário de restaurante</field>
			<field name="category_id" ref="module_category_ud_restaurante"/>
        	<field name="implied_ids" eval="[(4, ref('group_ud_ru_usuario'))]"/>
        	<field name="comment">Grupo de controle de políticas para Funcinário</field>
		</record>

		<record id="group_ud_ru_gerente" model="res.groups">
			<field name="name">Gerente de restaurante</field>
			<field name="category_id" ref="module_category_ud_restaurante"/>
        	<field name="implied_ids" eval="[(4, ref('group_ud_ru_funcionario'))]"/>
        	<field name="comment">Grupo de controle de políticas para Gerente</field>
		</record>

		<record id="group_ud_ru_administrador" model="res.groups">
			<field name="name">Administrador de restaurante</field>
        	<field name="users" eval="[(4, ref('base.user_root'))]"/>
			<field name="category_id" ref="module_category_ud_restaurante"/>
        	<field name="implied_ids" eval="[(4, ref('group_ud_ru_gerente'))]"/>
        	<field name="comment">Grupo de controle de políticas para Administrador</field>
		</record>


	</data>
</openerp>
