<odoo>
<template id="ud_ru.cadastro">

    <t t-call="ud_website.layout">
      <t t-set="title" t-value="'Cadastro'"></t>

      <div class="container">
        <div class="py-4 page-title">
          <h1>Cadastro</h1>
        </div>

        <p>
          Preencha o formulário de cadastro.
        </p>

        <form class="row" action="/cadastrar/" method="post">
          <div class="col-sm-8">
            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
            <div class="form-group col-sm-8">
              <label for="nome">Nome Completo</label>
              <input type="text" class="form-control" id="name" name="name" required=""/>
            </div>
            <div class="form-group col-sm-8">
              <label for="email">E-mail</label>
              <input type="email" class="form-control" id="email" name="email" required=""/>
            </div>
            <div class="form-group col-sm-8">
              <label for="celular">Celular</label>
              <input type="text" class="form-control celular" id="celular" name="celular" required=""/>
            </div>
            <div class="form-group col-sm-8">
              <label for="cpf">CPF</label>
              <input type="text" class="form-control cpf" id="cpf" name="cpf" required=""/>
            </div>
            <div class="form-group col-sm-8">
              <label for="rg">RG</label>
              <input type="text" class="form-control rg" id="rg" name="rg" required=""/>
            </div>
            <div class="form-group col-sm-8">
              <label for="orgaoexpedidor">Orgão Expedidor</label>
              <input type="text" class="form-control orgaoexpedidor" id="orgaoexpedidor" name="orgaoexpedidor" required=""/>
            </div>


             <div class="form-group col-sm-8">
              <label for="matricula">Matrícula</label>
              <input type="text" class="form-control matricula" id="matricula" name="matricula" required=""/>
            </div>

            <div class="form-group col-sm-8">
              <label for="vinculo">Vínculo</label>
                <select class="form-control vinculo" name="vinculo" id="vinculo" >
                 <option value="4">Discente Graduação</option>
                 <option value="5">Discente Pós-Graduação</option>
              </select>
            </div>

            <div class="form-group col-sm-8">
              <label for="curso">Curso</label>
              <br></br>
              <select class="form-control curso" name="curso" id="curso" >
                 <option value="1">ADMINISTRAÇÃO</option>
                 <option value="2">ADMINISTRAÇÃO PÚBLICA</option>
                 <option value="3">ADMINISTRAÇÃO PÚBLICA - EAD</option>
                 <option value="5">AGRONOMIA</option>
                 <option value="6">ARQUITETURA E URBANISMO</option>
                 <option value="9">CIÊNCIAS BIOLÓGICAS</option>
                 <option value="11">EDUCAÇÃO FÍSICA - LICENCIATURA</option>
                 <option value="12">ENFERMAGEM</option>
                 <option value="16">FÍSICA - LICENCIATURA</option>
                 <option value="17">FÍSICA - LICENCIATURA - EAD</option>
                 <option value="35">LETRAS - LÍNGUA ESPANHOLA - EAD</option>
                 <option value="18">LETRAS - LÍNGUA PORTUGUESA</option>
                 <option value="19">MATEMÁTICA</option>
                 <option value="20">MEDICINA</option>
                 <option value="23">PEDAGOGIA</option>
                 <option value="33">QUÍMICA - EAD</option>
                 <option value="25">QUÍMICA - LICENCIATURA</option>
                 <option value="32">QUÍMICA - LICENCIATURA</option>
              </select>
            </div>

<!--            <div class="form-group col-sm-8">-->
<!--              <label for="mensagem">Sua mensagem</label>-->
<!--              <textarea class="form-control" id="mensagem" name="mensagem" rows="5" required=""></textarea>-->
<!--            </div>-->
            <div t-if="error" class="alert alert-warning col-sm-8">
              <t t-esc="error"></t>
            </div>
            <div class="form-group col-sm-8">
              <button type="submit" class="btn btn-block btn-primary">Enviar</button>
            </div>
          </div>
        </form>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel"
           aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="successModalLabel">Obrigado!</h5>
              <button type="button" class="close not-load" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&#x274C;</span>
              </button>
            </div>
            <div class="modal-body">
              Usuário cadastrado com sucesso.
            </div>
          </div>
        </div>
      </div>

      <script t-if="success">
        $('#successModal').modal();
      </script>

    </t>

  </template>

</odoo>