<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

        <record model="ir.actions.act_window" id="ud_ru_refeicao_tipo_action">
            <field name="name">Opções de refeições</field>
            <field name="res_model">ud.ru.refeicao_tipo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Clique para adicionar um novo item
                </p>
                <p>

                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="ud_ru_refeicao_tipo_tree">
            <field name="name">Opções </field>
            <field name="model">ud.ru.refeicao_tipo</field>
            <field name="arch" type="xml">
                <tree string="Opções">
                    <field name="name"/>
                    <field name="valor_estagiario"/>
                    <field name="valor_bolsista"/>
                    <field name="valor_aluno"/>
                    <field name="valor_aluno_pos"/>
                    <field name="valor_tecnico"/>
                    <field name="valor_docente"/>
                    <field name="valor_visitante"/>
                    <field name="ativo"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="ud_ru_refeicao_tipo_form">
            <field name="name">Opções</field>
            <field name="model">ud.ru.refeicao_tipo</field>
            <field name="arch" type="xml">
                <form string="Opções">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="ativo"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group>
                            <group string="Valores">
                                <group>
                                    <field name="valor_estagiario"/>
                                    <field name="valor_bolsista"/>
                                    <field name="valor_aluno"/>
                                </group>
                                <group>
                                    <field name="valor_tecnico"/>
                                    <field name="valor_docente"/>
                                    <field name="valor_visitante"/>
                                </group>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>