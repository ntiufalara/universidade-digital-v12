

<odoo>

        <template id="index">
            <t t-call="ud_website.layout">
                <t t-set="title">Almoço</t>



                <!-- Campos de busca -->
                <div class="bg-tema py-4">
                    <div class="buscar text-center ">

                        <h2 class="section-title pt-3 font-weight-bold">Almoço</h2>

                        <object class="acesse-vector mx-4 " width="400" height="100"
                                    data="/ud_ru/static/src/img/prato-almoco.svg"
                                    type="image/svg+xml"></object>

                        <div class="d-flex justify-content-center text-white">
                            <form class="form-inline" action="/ud_ru/almocar/">
                                <div class="buscar-input">
                                    <label class="sr-only" for="cpf">CPF</label>
                                    <input type="text" class="form-control mb-2 mr-0 buscar-sombra " id="cpf" name="cpf"
                                           placeholder="Digite o CPF"/>

                                </div>

                                <button type="submit" class="btn btn-primary btn-tema mb-2 buscar-sombra">Registar
                                </button>
                            </form>
                        </div>

                        <t t-if="msg_ok">
                            <div class="container">
                              <div class="alert alert-info mt16" role="alert">
                                <strong><t t-esc="msg_ok"/></strong>
                              </div>
                            </div>
                        </t>

                        <t t-if="msg_alerta">
                            <div class="container">
                              <div class="alert alert-danger mt16" role="alert">
                                <strong><t t-esc="msg_alerta"/></strong>
                              </div>
                            </div>
                        </t>

                    </div>
                </div>
            </t>
        </template>

            <template id="transferencia">
            <t t-call="ud_website.layout">
                <t t-set="title">Transferência</t>

                <div class="bg-tema py-4">
                    <div class="buscar text-center ">

                        <h2 class="section-title pt-3 font-weight-bold">Transferência</h2>


                        <div class="d-flex justify-content-center text-white">
                            <form class="form-inline" action="/ud_ru/transferir/" method="post">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <div class="buscar-input">
                                    <label class="sr-only" for="cpf_destinatario">CPF</label>
                                    <input type="text" class="form-control mb-2 mr-0 buscar-sombra " id="cpf_destinatario" name="cpf_destinatario"
                                           placeholder="Digite o CPF do destinatário"/>
                                </div>

                                <div class="buscar-input">
                                    <label class="sr-only" for="valor">Valor</label>
                                    <input type="text" class="form-control mb-2 mr-0 buscar-sombra " id="valor" name="valor"
                                           placeholder="Digite o valor"/>
                                </div>


                                <button type="submit" class="btn btn-primary btn-tema mb-2 buscar-sombra">Registar
                                </button>
                            </form>
                        </div>

                        <t t-if="success">
                            <div class="container">
                              <div class="alert alert-info mt16" role="alert">
                                <strong><t t-esc="msg_ok"/></strong>
                              </div>
                            </div>
                        </t>

                        <t t-if="error">
                            <div class="container">
                              <div class="alert alert-danger mt16" role="alert">
                                <strong><t t-esc="msg_alerta"/></strong>
                              </div>
                            </div>
                        </t>

                    </div>
                </div>
            </t>
        </template>


